{% block title %}
    {{ title }}
{% endblock %}

{% block main %}
    <h2>{{ title }}</h2>
    {{customer.firstName}} {{customer.name}}
    {% for basketLine in basketLines %}
    </br>{{basketLine.product.name}} {{basketLine.product.price}} {{basketLine.quantity}}
    {% endfor %}
    </br>Total: {{ basketTotal}}€ 
    </br>Paiement: Chèque
