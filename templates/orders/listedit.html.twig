        {% for form in forms %}
        </br> Id #{{ form.vars.value.id}} Prénom:{{ form.vars.value.customer.firstname }} Nom:{{ form.vars.value.customer.name }} Total: {{ form.vars.value.total }}€ Date:{{ form.vars.value.date.format('d-m-Y') }}
