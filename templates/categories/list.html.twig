{% extends 'base.html.twig' %} {% block header %}
<a href="/admin/dashboard"
  ><img class="headerBanner" src="/img/header.gif" alt="Bannière du header"
/></a>
<nav>
  <ul class="headerList">
    <li><a href="/admin/dashboard">ACCUEIL</a></li>
    <li><a href="/admin/products/list">PRODUITS</a></li>
    <li><a href="/admin/categories/list">CATÉGORIES</a></li>
    <li><a href="/admin/orders/list">COMMANDES</a></li>
    <li><a href="/admin/reviews/list">AVIS</a></li>
  </ul>
</nav>
{% endblock %} {% block main %}
<div class="div-btn-table-zombie">
  <a
    href="/admin/categories/new"
    class="btn btn-success btn-white btn-table-zombie"
    >CRÉER CATÉGORIE</a
  >
</div>
{# {{ title }} #}

<table
  class="table table-striped table-bordered table-hover table-responsive zombie-table"
>
  <thead>
    <th colspan="3" id="zombie-table-title">CATEGORIES</th>
    <tr>
      <th>CATÉGORIE</th>
      <th>DESCRIPTION</th>
      <th>MODIFIER</th>
    </tr>
  </thead>
  <tbody>
    {% for item in categories %}
    <tr>
      <td>{{ item.name }}</td>
      <td>{{ item.description }}</td>
      <td>
        <a
          href="{{ path('app_update_category', { id: item.id }) }}"
          class="btn btn-success"
          >Mettre à jour</a
        >
        <a
          href="{{ path('app_delete_category', { id: item.id }) }}"
          class="btn btn-success"
          >Supprimer</a
        >
      </td>
      {% else %} Aucune catégorie existante {% endfor %}
    </tr>
  </tbody>
</table>
{% endblock %} {% block footer %} {% endblock %}
