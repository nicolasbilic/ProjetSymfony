{% if app.user %}
<div class="basketHeader">
  <img class="iconBasket" src="/images/iconbasketwhite.png" alt="Logo panier" />
  <h1 class="darkGreen">VOTRE PANIER</h1>
</div>

{% for product in products %}
<div class="basketItem">
  <img
    src="/images/{{ product.product.picture }}"
    alt="{{ product.product.name }}"
  />
  <p class="basketItemP">{{ product.product.name }}</p>
  <div id="count">
    <div class="button buttonLeft"><p class="countP darkGreen">-</p></div>
    <div class="displayer">
      <p class="countP darkGreen">{{ product.quantity }}</p>
    </div>
    <div class="button buttonRight"><p class="countP darkGreen">+</p></div>
  </div>
</div>
{% endfor %}

<div id="price">TOTAL : {{ totalePrice }}â‚¬</div>
<button class="basketSubmit">PAYER</button>
<script type="module" src="{{ asset('/js/handleClicIconBasket.js') }}"></script>
{% else %}
<div class="basketHeader">
  <a href="/login"
    ><img
      class="iconBasket"
      src="/images/iconbasketwhite.png"
      alt="Logo panier"
  /></a>
</div>
{% endif %}
