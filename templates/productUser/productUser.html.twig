{% extends 'base.html.twig' %} {% block main %} {% if errors is not empty %}
<div class="errorMessage">
  <h1 class="darkGreen">{{ errors }}</h1>
</div>
{% endif %} {% if product is not empty %}
<section id="product">
  <div class="sectionContainer">
    <h1 class="darkGreen">{{ product.name | upper }}</h1>
    <div class="pictureContainer">
      <img class="productPicture" src="/images/products/{{ data.picture }}"
      "Image DÃ©tails">
      <div>
        <p class="productDetails">{{ product.description | raw | nl2br }}</p>
        <div class="priceContainer">
          {{ form_start(form) }}
          {{ form_row(form.submit) }}
          {{ form_end(form) }}
          <h1 class="productPrice">{{ product.price }}</h1>
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %} {% endblock %}
