<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/header.css') }}" />
    {% if app.request.uri == 'https://127.0.0.1:8000/' or app.request.uri ==
    'https://127.0.0.1:8000/accueil' %}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}" />
    {% endif %}
    <link rel="stylesheet" href="{{ asset('css/basket.css') }}" />
    {% if app.request.uri == 'https://127.0.0.1:8000/list-products' or
    app.request.uri == 'https://127.0.0.1:8000/products'%}
    <link rel="stylesheet" href="{{ asset('css/listProducts.css') }}" />
    {% endif %} {% if app.request.uri == 'https://127.0.0.1:8000/product'%}
    <link rel="stylesheet" href="{{ asset('css/productUser.css') }}" />
    {% endif %} {% if app.request.uri == 'https://127.0.0.1:8000/contact' %}
    <link rel="stylesheet" href="{{ asset('css/contact.css') }}" />
    {% endif %} {% if app.request.uri == 'https://127.0.0.1:8000/login' or
    app.request.uri == 'https://127.0.0.1:8000/admin' %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}" />
    {% endif %}
    <title>{% block title %}Necro Defense Store{% endblock %}</title>
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    {% block stylesheets %} {% endblock %}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    {% block javascripts %} {% endblock %}
  </head>
  <body>
    {% block body %}
    <header>
      {% block header %}
      <img
        class="headerBanner"
        src="/images/headerBanner.jpg"
        alt="Bannière du header"
      />
      <nav>
        <ul class="headerList">
          <li><a href="/">ACCUEIL</a></li>
          <li><a href="/list-products">SOINS</a></li>
          <li><a href="/list-products">ARMEMENTS</a></li>
          <li><a href="/list-products">VÊTEMENTS</a></li>
          <li><a href="/contact">CONTACT</a></li>
          <li><a href="/login">CONNEXION</a></li>
        </ul>
        <section id="basket">
          {% block basket %}
          {{
            render(
              controller("App\\Controller\\BasketController::displayBasket")
            )
          }}
          {% endblock %}
        </section>
      </nav>
      {% endblock %}
    </header>

    <main>{% block main %} {% endblock %}</main>
    <footer>
      {% block footer %}
      <img
        class="footerBanner"
        src="/images/footerBanner.jpg"
        alt="Bannière du header"
      />

      {% endblock %}
    </footer>
    {% endblock %}
  </body>
</html>
