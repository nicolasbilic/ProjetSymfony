{% extends 'base.html.twig' %} {% block header %}
<a href="/admin/dashboard"
  ><img
    class="headerBanner"
    src="/img/headerBanner.jpg"
    alt="Bannière du header"
/></a>
<nav>
  <ul class="headerList">
    <li><a href="/admin/dashboard">ACCUEIL</a></li>
    <li><a href="/admin/products/list">PRODUITS</a></li>
    <li><a href="/admin/categories/list">CATÉGORIES</a></li>
    <li><a href="/admin/orders/list">COMMANDES</a></li>
    <li><a href="/admin/reviews/list">AVIS</a></li>
  </ul>
</nav>
{% endblock %} {% block main %}
<table
  class="table table-striped table-bordered table-hover table-responsive zombie-table"
>
  <thead>
    <th colspan="4" id="review-table-title">Liste des avis</th>
    <tr>
      <th>Note</th>
      <th>Titre</th>
      <th>Message</th>
      <th>Statut</th>
    </tr>
  </thead>
  {% if reviews is not empty %}
  <tbody>
    {% for review in reviews %}
    <tr>
      <td>{{ review.value }}</td>
      <td>{{ review.title }}</td>
      <td>{{ review.resume }}</td>
      <td>
          {{ review.state}}
        <a
          href="{{ path('app_update_review', { id: review.id }) }}"
          class="btn btn-success"
          >Modifier l'état</a
        >
      </td>
    </tr>
    {% endfor %} {% else %} Aucun avis existante {% endif %}
  </tbody>
</table>
{% endblock %}
