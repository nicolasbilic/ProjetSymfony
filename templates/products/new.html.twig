{% extends 'base.html.twig' %} {% block title %}
{{ title }}
{% endblock %} {% block header %}
<a href="/admin/dashboard"
  ><img class="headerBanner" src="/img/header.gif" alt="Bannière du header"
/></a>
<nav>
  <ul class="headerList">
    <li><a href="/admin/dashboard">ACCUEIL</a></li>
    <li><a href="/admin/products/list">PRODUITS</a></li>
    <li><a href="/admin/categories/list">CATÉGORIES</a></li>
    <li><a href="/admin/orders/list">COMMANDES</a></li>
    <li><a href="/admin/reviews/list">AVIS</a></li>
  </ul>
</nav>
{% endblock %} {% block main %}
<table
  class="table table-striped table-bordered table-hover table-responsive zombie-table"
>
  <thead>
    <th
      colspan="2"
      id="create-product-title"
      style="
        color: white;
        text-align: center;
        vertical-align: middle;
        font-family: 'Creepster', cursive;
        text-shadow: 2px 2px 4px #000;
        font-size: 35px;
        background-color: #186f37 !important;
      "
    >
      {{ title }}
    </th>
  </thead>
  <tbody>
    {{
      form_start(form)
    }}
    {% for form_row in form %} {% if form_row.vars.name != '_token' and
    form_row.vars.name != 'dateAdd' %}
    <tr>
      <td
        style="
          font-family: 'Creepster', cursive;
          font-size: 25px;
          color: white !important;
          background-color: #679b33 !important;
          text-align: center;
          vertical-align: middle;
        "
      >
        {{ form_label(form_row) }}
      </td>
      <td
        style="
          font-family: 'Creepster', cursive;
          font-size: 25px;
          color: white !important;
          background-color: #679b33 !important;
          text-align: center;
          vertical-align: middle;
        "
      >
        {% if form_row.vars.name == 'price' or form_row.vars.name ==
        'discount'%}
        {{ form_widget(form_row, {'attr': {'class': 'form-element'}}) }} € {%
        else %} {{ form_widget(form_row, {'attr': {'class': 'form-element'}}) }}
        {% endif %}
      </td>
    </tr>
    {% endif %} {% endfor %}
    <tr>
      <td
        style="
          font-family: 'Creepster', cursive;
          font-size: 25px;
          color: white !important;
          background-color: #679b33 !important;
          text-align: center;
          vertical-align: middle;
        "
      ></td>
      <td
        style="
          font-family: 'Creepster', cursive;
          font-size: 25px;
          color: white !important;
          background-color: #679b33 !important;
          text-align: center;
          vertical-align: middle;
        "
      >
        <input type="submit" name="créer" />
      </td>
    </tr>
    {{
      form_end(form)
    }}
  </tbody>
</table>
{% endblock %}
