{% extends 'base.html.twig' %} {% block header %}
<a href="/admin/dashboard"
  ><img class="headerBanner" src="/img/header.gif" alt="Bannière du header"
/></a>
<nav>
  <ul class="headerList">
    <li><a href="/admin/dashboard">ACCUEIL</a></li>
    <li><a href="/admin/products/list">PRODUITS</a></li>
    <li><a href="/admin/categories/list">CATÉGORIES</a></li>
    <li><a href="/admin/orders/list">COMMANDES</a></li>
    <li><a href="/admin/reviews/list">AVIS</a></li>
  </ul>
</nav>
{% endblock %} {% block main %}
<div class="div-btn-table-zombie">
  <a
    href="/admin/products/new"
    class="btn btn-success btn-white btn-table-zombie"
    >CRÉER PRODUIT</a
  >
</div>
<table
  class="table table-striped table-bordered table-hover table-responsive zombie-table"
>
  <thead>
    <th colspan="8" id="zombie-table-title">PRODUITS</th>
    <tr>
      <th>CATÉGORIE</th>
      <th>NOM</th>
      <th>PRIX</th>
      <th>RÉDUCTION</th>
      <th>DESCRIPTION</th>
      <th>STOCK</th>
      <th>TVA</th>
      <th>MODIFIER</th>
    </tr>
  </thead>
  <tbody>
    {% for item in products %}
    <tr>
      <td>{{ item.category.name }}</td>
      <td>{{ item.name }}</td>
      <td>{{ item.price }}€</td>
      <td>{{ item.discount }}€</td>
      <td>{{ item.description }}</td>
      <td>{{ item.stock }}</td>
      <td>{{ item.tva.value * 100 }}%</td>
      <td>
        <a
          href="{{ path('app_update_product', { id: item.id }) }}"
          class="btn btn-success"
          >Mettre à jour</a
        >
        <a
          href="{{ path('app_delete_product', { id: item.id }) }}"
          class="btn btn-success"
          >Supprimer</a
        >
      </td>
    </tr>
    {% else %} Aucun produit existant {% endfor %}
  </tbody>
</table>
{% endblock %} {% block footer %} {% endblock %}
